
@{
    ViewBag.Title = "toGetstudentInformation";
    Layout = "~/Views/Shared/_LayoutUniversity.cshtml";
}
<section class="site-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(images/big_image_2.jpg);">
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-inner">
            <div class="col-md-10">

                <div class="mb-5 element-animate">
                    <div class="block-17">
                        <form action="~/studentServices/GetstudentInformation" method="post" class="d-block d-lg-flex mb-4">
                            <div class="fields d-block d-lg-flex">
                                <div class="textfield-search one-third"><input type="text" name="id" class="form-control" placeholder="Enter your ID" required pattern="[0-9]{9}" size="9" title="Please  Enter 9-digit only"></div>
                                <div class="select-wrap one-third">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <div class="textfield-search two-third"><input type="text" name="NationalID" class="form-control" placeholder="Enter your National ID" required pattern="[0-9]{14}" size="9" title="Please  Enter 9-digit only"></div>
                                </div>
                            </div>
                            <input type="submit" class="search-submit btn btn-primary" value="GO">
                        </form>
                        @*<p class="text-center mb-5">We have more than 500 courses to improve your skills</p>
                            <p class="text-center"><a href="#" class="btn py-3 px-5">Register Now</a></p>*@
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
