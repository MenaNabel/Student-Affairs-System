@model SAS.Models.student
@{
    ViewBag.Title = "addStudent";
    Layout = "~/Views/Shared/_LayoutUniversity.cshtml";
}
<section class="site-hero site-sm-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(images/big_image_2.jpg);">
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-sm-inner">
            <div class="col-md-7 text-center">

                <div class="mb-5 element-animate">
                    <h1 class="mb-2">REGISTER</h1>
                    <p class="bcrumb"><a href="~/Home/AssiutUniversity">Home</a> <span class="sep ion-android-arrow-dropright px-2"></span>  <span class="current">Register</span></p>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- END section -->

<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="form-wrap">
                    <h2 class="mb-5">Register new student</h2>
                    <form action="~/studentInformation/insertDegreesToStudent" method="post">

                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="name">ID</label>
                                <input type="text" name="student_ID" class="form-control py-2" required pattern="[0-9]{9}" size="9" title="Please  Enter 9-digit only">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="name">Name</label>
                                <input type="text" name="student_name" class="form-control py-2" required maxlength="250">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="name">National ID</label>
                                <input type="text" name="student_national_ID" class="form-control py-2" required pattern="[0-9]{14}" size="14" title="Enter 14 digits only">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="name">Age</label>
                                <input type="number" name="student_age" class="form-control py-2">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="Email">Email</label>
                                <input type="email" name="student_email" class="form-control py-2" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="name">Phone</label>
                                <input type="text" name="student_phone" class="form-control py-2 " pattern="[0-9]{11}" title="Enter 11 digits only">
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-12 form-group">
                                <label for="name">Adress</label>
                                <input type="text" name="student_adress" class="form-control py-2">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Register" class="btn btn-primary px-5 py-2">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
